{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "requireConfigFile": false,
    "sourceType": "module",
    "babelOptions": {
       "presets": ["@babel/preset-react"]
    }
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["/src/index.js"]
}
